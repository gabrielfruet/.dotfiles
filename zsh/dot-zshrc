# Path configuration
export PATH="$HOME/bin:/usr/local/bin:$PATH"
export PATH="$PATH:/usr/local/go/bin"
export PATH="$DENO_INSTALL/bin:$PATH"
export PATH="$HOME/.bin:$PATH"
export PATH="$PATH:/home/gabrielfruet/.local/bin"
export PATH="$PATH:/home/gabrielfruet/bin/flatpak"
export PATH="$PATH:$HOME/bin/scripts"

# ZSH and Oh-My-Zsh configuration
export ZSH="$HOME/.oh-my-zsh"
export ALIAS="$HOME/zsh-profile"
export SCRIPTS="$HOME/bin/scripts"

source "$ALIAS/sourcerer.zsh"
source "$ZSH/oh-my-zsh.sh"
source "/home/gabrielfruet/pkg/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh"

# Starship prompt
eval "$(starship init zsh)"

# Plugins
plugins=(
  git 
  gnu-utils
  zsh-autosuggestions
  colored-man-pages
  colorize
  common-aliases
)

# Auto suggestions
bindkey '^ ' autosuggest-accept

